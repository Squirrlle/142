#ifndef STRING_H_
#define STRING_H_
#include <stdio.h>
#include <string.h>

class String {
public:
	String() : buffer_('\0'){ size_ = 0;}
	String(char* user) : buffer_(user){
		size_ = strlen(user) + 1;
	}
	 ~String(){ delete[] buffer_; }
	int length();
	void clear();
	inline char operator[](int indx){return *(buffer_+indx);}
	private:
	char* buffer_;
	int size_;
};

#endif /* STRING_H_ */
